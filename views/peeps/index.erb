<%= styled_flash %> <br>

<% if @user %>
  <h1>Welcome, <%= @user.email %></h1> <br>

  <form action="/sessions/destroy" method = "post">
    <input type="submit" value="Sign Out">
  </form>

  <% @peeps.each do |peep| %>
     <%= peep.text %> : <%= peep.time %> <br>
  <% end %>
<% end %>

<form action="/peeps" method = "post">
  Submit a peep: <input type="text" name="peep">
  <input type="submit" value="Add Peep">
</form>

<% if !@user %>
  <p> Please sign in! </p>
<% end %>
